    
<!doctype html>
<html>
<head>
    <title>My friend list </title>
    <!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">

<!-- Optional theme -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap-theme.min.css" integrity="sha384-6pzBo3FDv/PJ8r2KRkGHifhEocL+1X2rVCTTkUfGk7/0pbek5mMa1upzvWbrUbOZ" crossorigin="anonymous">

<!-- Latest compiled and minified JavaScript -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/2963316186.js"></script>
    <style>
    </style>
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/profile">My Friend List</a>
        </div>
        <ul class="nav navbar-nav">
            <li class="active"><a href="/profile">Users</a></li>
            <li><a href="/friends">Friends</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
        </ul>
    </div>
</nav>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Welcome <%= user.name %> </h1>
    </div>

    <div class="row">
        <% for(var i=0; i<users.length; i++) { %>
        <div class="col-sm-6 col-md-6 col-lg-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> <%=users[i].name%> </h3>
                <p>
                    <strong>email</strong>: <%=users[i].email%><br>
                </p>
                <form action="/friends" method="post">
                    <input type="hidden" name="friendId" value="<%=users[i]._id%>">
                    <button type="submit" class="btn btn-default">Add Friend</button>
                </form>
            </div>
        </div>
          <%}%>
    </div>

</div>
</body>
</html>